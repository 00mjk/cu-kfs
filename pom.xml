<?xml version="1.0" encoding="UTF-8"?><project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.cornell.kfs</groupId>
  <artifactId>kfs-war</artifactId>
  <packaging>war</packaging>
  <name>KFS war</name>
  <version>3.0.${kfs.build}-SNAPSHOT</version>
  <description>
    This project wraps the KFS war with a war overlay.
  </description>
  <url>https://forge.cornell.edu/sf/projects/cynergy</url>
  <inceptionYear>2009</inceptionYear>
  <organization>
    <name>Cornell University</name>
    <url>http://www.cornell.edu/</url>
  </organization>

  <properties>
    <kfs.build>OVERRIDE ME</kfs.build>
  <!-- 
    <BUILD_ENVIRONMENT>**Define BUILD_ENVIRONMENT in cu-kfs build.properties**</BUILD_ENVIRONMENT>
    <APPSERVER_URL>**Define APPSERVER_URL in cu-kfs build.properties**</APPSERVER_URL>
    <EXTERNAL_CONFIG_DIR>**Define EXTERNAL_CONFIG_DIR in cu-kfs build.properties**</EXTERNAL_CONFIG_DIR>
    <RICE_STANDALONE>**Define RICE_STANDALONE in cu-kfs build.properties**</RICE_STANDALONE>
     -->
  </properties>

  
  <build>
    <filters>
      <filter>build.properties</filter>
    </filters>
  
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-war-plugin</artifactId>
          <!-- IT IS VERY IMPORTANT THAT THE VERSION IS EXPLICITLY SET
               TO 2.1+ OR ABOVE, OR FILTERING WILL NOT WORK
               http://jira.codehaus.org/browse/MWAR-143
          -->
          <version>2.1-beta-1</version>
          <configuration>
            <nonFilteredFileExtensions>
              <!-- default value contains jpg,jpeg,gif,bmp,png -->
              <nonFilteredFileExtension>jar</nonFilteredFileExtension>
              <nonFilteredFileExtension>class</nonFilteredFileExtension>
              <nonFilteredFileExtension>tld</nonFilteredFileExtension>
              <nonFilteredFileExtension>jsp</nonFilteredFileExtension>
			  <nonFilteredFileExtension>tag</nonFilteredFileExtension>
            </nonFilteredFileExtensions>

            <warName>kfs-${BUILD_ENVIRONMENT}-${version}</warName>

<!-- 
            <webResources>
              <resource>
                <directory>src/main/webapp/WEB-INF/classes</directory>
                <includes>
                  <include>configuration.properties</include>
                </includes>
                <filtering>true</filtering>
              </resource>
            </webResources>
             -->
            
            <overlays>
              <overlay>
                <groupId>edu.cornell.kfs</groupId>
                <artifactId>kfs-stock-war</artifactId>
                <filtered>true</filtered>
              </overlay>
            </overlays>
          </configuration>
      </plugin>
      <!--
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.2</version>
        <executions>
          <execution>
            <id>package</id>
            <phase>package</phase>
            <configuration>
              <tasks>
                <ant antfile="build.xml" target="generate-config"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>clean</id>
            <phase>clean</phase>
            <configuration>
              <tasks>
                <ant antfile="build.xml" target="clean-generated-config"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      -->
      <plugin>
        <artifactId>exec-maven-plugin</artifactId>
        <groupId>org.codehaus.mojo</groupId>
        <executions>
          <execution>
            <id>package</id>
            <phase>package</phase>
            <configuration>
              <executable>ant</executable>
              <arguments>
                <argument>generate-config</argument>
              </arguments>
            </configuration>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
          <execution>
            <id>clean</id>
            <phase>clean</phase>
            <configuration>
              <executable>ant</executable>
              <arguments>
                <argument>clean-generated-config</argument>
              </arguments>
            </configuration>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    
    <resources>
        <!-- the normal resource dir -->
        <resource>
          <directory>src/main/resources</directory>
          <filtering>true</filtering>
        </resource>
    </resources>
    
  </build>

  <repositories>
    <repository>
      <id>kuali</id>
      <name>Kuali Repository</name>
      <url>https://test.kuali.org/maven</url>
    </repository>
    <repository>
      <id>cornell-internal</id>
      <url>https://maven.cit.cornell.edu/repository/internal</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>cornell-snapshots</id>
      <url>https://maven.cit.cornell.edu/repository/snapshots</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>
  </repositories>

  <dependencies>
    
    <dependency>
      <groupId>edu.cornell.kfs</groupId>
      <artifactId>kfs-stock-war</artifactId>
      <version>3.0.${kfs.build}-SNAPSHOT</version>
      <type>war</type>
      <scope>runtime</scope>
    </dependency>
    
	<!-- our oracle is better -->
	<dependency>
		<groupId>com.oracle</groupId>
		<artifactId>ojdbc14</artifactId>
		<version>10.2.0.3.0</version>
        <scope>runtime</scope>
	</dependency>

    <dependency>
        <groupId>jotm</groupId>
        <artifactId>jotm</artifactId>
        <version>2.0.10</version>
        <scope>runtime</scope>
    </dependency> 
    <dependency>
        <groupId>jotm</groupId>
        <artifactId>jotm_jrmp_stubs</artifactId>
        <version>2.0.10</version>
        <scope>runtime</scope>
    </dependency> 
    <dependency>
        <groupId>jotm</groupId>
        <artifactId>jotm_iiop_stubs</artifactId>
        <version>2.0.10</version>
        <scope>runtime</scope>
    </dependency>
    <dependency>
        <groupId>javax.transaction</groupId>
        <artifactId>jta</artifactId>
        <version>1.0.1B</version>
        <scope>runtime</scope>
    </dependency> 
    <dependency>
        <groupId>xapool</groupId>
        <artifactId>xapool</artifactId>
        <version>1.5.0-patch</version>
        <scope>runtime</scope>
    </dependency>
  </dependencies>
  
  <distributionManagement>
    <repository>
      <id>cornell-internal</id>
      <url>dav:https://maven.cit.cornell.edu/repository/internal/</url>
    </repository>
    <snapshotRepository>
      <id>cornell-snapshots</id>
      <name>cornell-snapshots</name>
      <uniqueVersion>false</uniqueVersion>
      <url>https://maven.cit.cornell.edu/repository/snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
</project>