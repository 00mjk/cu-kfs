                                <groupId>org.mortbay.jetty</groupId>
                                <artifactId>jetty-annotations</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                    </dependencies> -->
      </plugin>
      
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>tomcat-maven-plugin</artifactId>
        <configuration>
          <systemProperties>
            <environment>dev</environment>
			<cynergy.home>home</cynergy.home>
			<additional.kfs.config.location>home/conf/cu-kfs-dev-config.properties</additional.kfs.config.location>
			<job.name>${job.name}</job.name>
			<cynergy.development>${cynergy.development}</cynergy.development>
          </systemProperties>
        </configuration>
      </plugin>
      
    </plugins>
    
    <resources>
        <!-- the normal resource dir -->
        <resource>
          <directory>src/main/resources</directory>
          <filtering>true</filtering>
        </resource>
    </resources>
    
  </build>

  <repositories>
    <repository>
      <id>kuali</id>
      <name>Kuali Repository</name>
      <url>https://test.kuali.org/maven</url>
    </repository>
    <repository>
      <id>cornell-internal</id>
      <url>https://maven.cit.cornell.edu/repository/internal</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>cornell-snapshots</id>
      <url>https://maven.cit.cornell.edu/repository/snapshots</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>
  </repositories>

  <dependencies>

    <dependency>
      <groupId>edu.cornell.cynergy </groupId>
      <artifactId>cynergy-customizations</artifactId>
      <version>2.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>edu.cornell.kfs</groupId>
      <artifactId>kfs-stock-war</artifactId>
      <version>3.0.1</version>
      <type>war</type>
    </dependency>
       
     <dependency>
       <groupId>edu.cornell.kfs</groupId>
       <artifactId>kfs-stock-lib</artifactId>
       <version>3.0.1-tmp-SNAPSHOT</version>
     </dependency>
    
    
	<!-- our oracle is better -->
	<dependency>
		<groupId>com.oracle</groupId>
		<artifactId>ojdbc14</artifactId>
		<version>10.2.0.3.0</version>
        <scope>runtime</scope>
	</dependency>

    <dependency>
        <groupId>jotm</groupId>
        <artifactId>jotm</artifactId>
        <version>2.0.10</version>
        <scope>runtime</scope>
    </dependency> 
    <dependency>
        <groupId>jotm</groupId>
        <artifactId>jotm_jrmp_stubs</artifactId>
        <version>2.0.10</version>
        <scope>runtime</scope>
    </dependency> 
    <dependency>
        <groupId>jotm</groupId>
        <artifactId>jotm_iiop_stubs</artifactId>
        <version>2.0.10</version>
        <scope>runtime</scope>
    </dependency>
    <dependency>
        <groupId>javax.transaction</groupId>
        <artifactId>jta</artifactId>
        <version>1.0.1B</version>
        <scope>compile</scope>
    </dependency> 
    <dependency>
        <groupId>xapool</groupId>
        <artifactId>xapool</artifactId>
        <version>1.5.0-patch</version>
        <scope>runtime</scope>
    </dependency>
  </dependencies>
  
  <distributionManagement>
    <repository>
      <id>cornell-internal</id>
      <url>dav:https://maven.cit.cornell.edu/repository/internal/</url>
    </repository>
    <snapshotRepository>
      <id>cornell-snapshots</id>
      <name>cornell-snapshots</name>
      <uniqueVersion>true</uniqueVersion>
      <url>https://maven.cit.cornell.edu/repository/snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
</project>
