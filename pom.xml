<?xml version="1.0" encoding="UTF-8"?><project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.cornell.kfs</groupId>
  <artifactId>kfs-war</artifactId>
  <packaging>war</packaging>
  <name>KFS war</name>
  <version>3.0.1-SNAPSHOT</version>
  <description>
    This project wraps the KFS war with a war overlay.
  </description>
  <url>https://forge.cornell.edu/sf/projects/cynergy</url>
  <inceptionYear>2009</inceptionYear>
  <organization>
    <name>Cornell University</name>
    <url>http://www.cornell.edu/</url>
  </organization>


  <properties>
	<job.name>${project.artifactId}</job.name>
	<cynergy.development>true</cynergy.development>
  </properties> 
  
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-war-plugin</artifactId>
          <!-- IT IS VERY IMPORTANT THAT THE VERSION IS EXPLICITLY SET
               TO 2.1+ OR ABOVE, OR FILTERING WILL NOT WORK
               http://jira.codehaus.org/browse/MWAR-143
          -->
          <version>2.1-beta-1</version>
          <configuration>
            <nonFilteredFileExtensions>
              <!-- default value contains jpg,jpeg,gif,bmp,png -->
              <nonFilteredFileExtension>jar</nonFilteredFileExtension>
              <nonFilteredFileExtension>class</nonFilteredFileExtension>
              <nonFilteredFileExtension>tld</nonFilteredFileExtension>
              <nonFilteredFileExtension>jsp</nonFilteredFileExtension>
			  <nonFilteredFileExtension>tag</nonFilteredFileExtension>
            </nonFilteredFileExtensions>

			<!-- 
            <warName>cu-kfs-${version}</warName>
            -->

<!-- 
            <webResources>
              <resource>
                <directory>src/main/webapp/WEB-INF/classes</directory>
                <includes>
                  <include>configuration.properties</include>
                </includes>
                <filtering>true</filtering>
              </resource>
            </webResources>
             -->
            
            <overlays>
              <overlay>
                <groupId>edu.cornell.kfs</groupId>
                <artifactId>kfs-stock-war</artifactId>
                <filtered>false</filtered>
                <!-- Exclude libraries that come with KFS
                     that are older than Rice libraries pulled in
                     via Maven, or are simply a different file name than
                     the same version Maven artifact. -->
                <excludes>
                    <exclude>WEB-INF/lib/log4j*.jar</exclude>
                    <exclude>WEB-INF/lib/activation-*.jar</exclude>
                    <exclude>WEB-INF/lib/commons-beanutils-*.jar</exclude>
                    <!--
                      KFS's is newer
                    <exclude>WEB-INF/lib/commons-digester-*.jar</exclude>
                    -->
                    <exclude>WEB-INF/lib/commons-logging*.jar</exclude>
                    <exclude>WEB-INF/lib/commons-pool*.jar</exclude>
                    <exclude>WEB-INF/lib/connector-*.jar</exclude>
                    <exclude>WEB-INF/lib/db-ojb-*.jar</exclude> <!-- kfs has db-ojb-1.0.4-kuali-mods-debug.jar ?? -->
                    <exclude>WEB-INF/lib/jaxb-xjc-*.jar</exclude>
                    <!--
                      KFS's is newer...
                      <exclude>WEB-INF/lib/jaxen-*.jar</exclude> 
                    -->
                    <exclude>WEB-INF/lib/jotm*.jar</exclude>
                    <exclude>WEB-INF/lib/ojdbc*.jar</exclude>
                    <exclude>WEB-INF/lib/oscache*.jar</exclude>
                    <exclude>WEB-INF/lib/spring*.jar</exclude>
                    <exclude>WEB-INF/lib/xalan-*.jar</exclude>
                    <exclude>WEB-INF/lib/xapool*.jar</exclude>
                    <!--
                      KFS's is newer... 
                    <exclude>WEB-INF/lib/xercesImpl-*.jar</exclude>
                    -->
                    <!-- Rice includes this...not sure if it conflicts with newer xercesImpl
                    <exclude>WEB-INF/lib/xmlParserAPIs-2.6.2.jar</exclude>
                    -->
                    <!--
                      KFS's is newer...
                    <exclude>WEB-INF/lib/xml-apis-*.jar</exclude>
                    -->
                    <exclude>WEB-INF/lib/xpp*.jar</exclude>
                    <exclude>WEB-INF/lib/wsdl4j*.jar</exclude>
                    <!-- 
                      KFS's is newer
                    <exclude>WEB-INF/lib/itext-*.jar</exclude>
                    -->
                </excludes>
              </overlay>
            </overlays>
          </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
		<artifactId>jetty-maven-plugin</artifactId>
		<version>7.0.0.pre5-CU-SNAPSHOT</version>
        <configuration>
            <contextPath>/cynergy</contextPath>
  			<stopPort>9967</stopPort>
   			<stopKey>cu-kfs</stopKey>
            <systemProperties>
                <systemProperty>
                   <name>environment</name>
                   <value>dev</value>
                </systemProperty>
                <systemProperty>
                   <name>cynergy.home</name>
                   <value>home</value>
                </systemProperty>
                <systemProperty>
                   <name>additional.kfs.config.location</name>
                   <value>home/conf/cu-kfs-dev-config.properties</value>
                </systemProperty>
                <systemProperty>
	               <name>job.name</name>
	               <value>${job.name}</value>
			    </systemProperty>
			    <!-- This parameter is being propagated so that during functional testing
			         we can set the cynergy.development flag to false at runtime in order
			         to test reading of the CUWA header, and to simulate CUWA login. -->
			    <systemProperty>
	               <name>cynergy.development</name>
	               <value>${cynergy.development}</value>
			    </systemProperty>
            </systemProperties>
             
        </configuration>
        <dependencies>
        	<dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>servlet-api</artifactId>
            <version>3.0.pre1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <version>7.0.0pre2</version>
            <artifactId>jsp-2.1</artifactId>
        </dependency>
        </dependencies>

        <!-- 
        <dependencies>
        <dependency>
                        <groupId>org.mortbay.jetty</groupId>
                        <artifactId>jsp-api-2.0</artifactId>
                        <version>6.1.14</version>

                    </dependency>
                    <dependency>
                        <groupId>tomcat</groupId>
