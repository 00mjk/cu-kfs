	</class-descriptor>
	
    <class-descriptor class="edu.cornell.kfs.krad.businessobject.NoteExtendedAttribute" table="KRNS_NTE_TX">
		<field-descriptor name="noteIdentifier" column="NTE_ID" jdbc-type="BIGINT" primarykey="true" indexed="true" />
