<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 1.0//EN" "http://www.getahead.ltd.uk/dwr/dwr10.dtd">

<dwr>
	<init>
		<creator id="spring" class="org.kuali.rice.kns.web.servlet.dwr.GlobalResourceDelegatingSpringCreator"/>
	</init>
	<allow>
	   	<convert converter="bean" match="org.kuali.kfs.sys.businessobject.UnitOfMeasure">
	   		<param name="include" value="itemUnitOfMeasureCode,itemUnitOfMeasureDescription" />
	   	</convert>
	    <create creator="spring" javascript="ItemUnitOfMeasureService">
	    	<param name="beanName" value="itemUnitOfMeasureService" />
	    	<include method="getByPrimaryId" />
	    </create>
	    <!-- CU Customization: Added custom util class to calculate IWNT doc item and account totals. -->
	    <create creator="new" javascript="IWantAmountUtil" scope="application">
	    	<param name="class" value="edu.cornell.kfs.module.purap.util.IWantAmountUtil" />
	    	<include method="calculateSingleItemTotal" />
	    	<include method="calculateTotalsForItemChange" />
	    	<include method="calculateTotalsForAccountChange" />
	    </create>
	</allow>	
</dwr>
